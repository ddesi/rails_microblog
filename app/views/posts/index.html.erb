<div id="postlist">

	<p>Create a new post <a href="/posts/new">HERE</a></p>

	<% @posts.each do |p| %>
	<h1>THIS IS A POST:</h1>
	<p>User id: <%= p.user_id %></p>
	<p>Title: <%= p.title %></p>
	<p>Content: <%= p.body %><br><br></p>
	wanna <%= link_to("DELETE", post_path(p.id), method: :delete) %> the post?

	<% end %>

</div>