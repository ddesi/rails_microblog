<div id="postlist">

	<p><a class="btn" href="/posts/new">CREATE A NEW POST HERE</a></p>

	<% @posts.reverse.each do |p| %>
	<div id="post_in_list">
		<h1><%= link_to(p.title, post_path(p.id), method: :get) %></h1>
		<!-- <p>User id: <%= p.user_id %></p> -->
		<p><%= p.body %></p>
		<p align="right"><%= p.comments.count %> comments | <%= link_to("add a comment", post_path(p.id), method: :get) %></p>
		<% if session[:user_id] && p.user_id == current_user.id %>

  		<p class="btn"><%= link_to("EDIT POST", edit_post_path(p.id), method: :get) %></p>

  		<p class="btn"><%= link_to("DELETE POST", post_path(p.id), method: :delete) %></p>
		<% end %>

	</div>
	<% end %>

</div>